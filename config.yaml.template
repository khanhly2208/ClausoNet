# ClausoNet 4.0 Pro Configuration Template
# Copy this file to config.yaml and fill in your API keys

# API Configuration
apis:
  gemini:
    enabled: true
    api_key: "YOUR_GEMINI_API_KEY"  # Từ https://makersuite.google.com/app/apikey
    model: "gemini-2.5-flash"
    max_tokens: 8192
    temperature: 0.7
    top_p: 0.9
    top_k: 40
    rate_limit: 60  # requests per minute
    
  openai:
    enabled: false
    api_key: "YOUR_OPENAI_API_KEY"  # Từ https://platform.openai.com/api-keys
    model: "gpt-4"
    max_tokens: 4096
    temperature: 0.7
    rate_limit: 20

# Video Generation Settings
video:
  default_duration: 8  # seconds per prompt
  max_prompts: 10
  output_format: "mp4"
  quality: "high"
  
# Chrome Settings
chrome:
  headless: false
  window_size: "1920,1080"
  user_agent: "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
  
# Workflow Settings
workflow:
  auto_retry: true
  max_retries: 3
  timeout: 300  # seconds
  
# Logging
logging:
  level: "INFO"
  file: "logs/clausonet.log"
  max_size: "10MB"
  backup_count: 5
  
# License Settings
license:
  check_interval: 3600  # seconds
  grace_period: 86400   # 24 hours
  
# GUI Settings
gui:
  theme: "dark"
  scaling: 1.0
  window_size: "1200x800" 